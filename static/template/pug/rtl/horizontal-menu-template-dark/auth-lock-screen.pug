	//  BEGIN: Body
	body.horizontal-layout.horizontal-menu.dark-layout.1-column.navbar-floating.footer-static.bg-full-screen-image.blank-page.blank-page(data-open='hover', data-menu='horizontal-menu', data-col='1-column', data-layout='dark-layout')
		//  BEGIN: Content
		.app-content.content
			.content-overlay
			.header-navbar-shadow
			.content-wrapper
				.content-header.row.
					
					
				.content-body
					section.row.flexbox-container
						.col-xl-7.col-10.d-flex.justify-content-center
							.card.bg-authentication.rounded-0.mb-0.w-100
								.row.m-0
									.col-lg-6.d-lg-block.d-none.text-center.align-self-center.px-1.py-0
										img(src='../../../app-assets/images/pages/lock-screen.png', alt='branding logo')
									.col-lg-6.col-12.p-0
										.card.rounded-0.mb-0.px-2.pb-2
											.card-header.pb-1
												.card-title
													h4.mb-0 Your Session is locked
											.card-content
												.card-body.pt-1
													form(action='index.html')
														fieldset.form-label-group.position-relative.has-icon-left
															input.form-control#user-name(type='text', placeholder='Username', required)
															.form-control-position
																i.feather.icon-user
															label(for='user-name') Username
														fieldset.form-label-group.position-relative.has-icon-left
															input.form-control#user-password(type='password', placeholder='Password', required)
															.form-control-position
																i.feather.icon-lock
															label(for='user-password') Password
														a(href='auth-login.html') Are you not John Doe ?
														button.btn.btn-primary.float-right(type='submit') Unlock
		//  END: Content
		//  BEGIN: Vendor JS
		script(src='../../../app-assets/vendors/js/vendors.min.js')
		//  BEGIN Vendor JS
		//  BEGIN: Page Vendor JS
		script(src='../../../app-assets/vendors/js/ui/jquery.sticky.js')
		//  END: Page Vendor JS
		//  BEGIN: Theme JS
		script(src='../../../app-assets/js/core/app-menu.js')
		script(src='../../../app-assets/js/core/app.js')
		script(src='../../../app-assets/js/scripts/components.js')
		//  END: Theme JS
		//  BEGIN: Page JS
		//  END: Page JS
	//  END: Body